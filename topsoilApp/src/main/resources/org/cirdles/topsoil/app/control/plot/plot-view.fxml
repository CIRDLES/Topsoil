<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<fx:root minHeight="200.0" minWidth="200.0" prefHeight="700.0" prefWidth="900.0" type="VBox" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ToolBar fx:id="toolbar" prefHeight="40.0" prefWidth="200.0">
        <items>
          <Button fx:id="saveSVGButton" mnemonicParsing="false" onAction="#saveSVGButtonAction" text="Export to SVG" />
            <Button fx:id="savePDFButton" mnemonicParsing="false" onAction="#savePDFButtonAction" text="Export to PDF" />
            <Button fx:id="resetViewButton" mnemonicParsing="false" onAction="#resetViewButtonAction" text="Reset View" />
        </items>
      </ToolBar>
      <SplitPane fx:id="plotView" dividerPositions="0.7" VBox.vgrow="ALWAYS">
        <items>
            <ScrollPane fitToHeight="true" fitToWidth="true">
              <content>
                <AnchorPane fx:id="plotAnchorPane" />
              </content>
            </ScrollPane>
          <AnchorPane fx:id="propertiesPanelAnchorPane" minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0" />
        </items>
      </SplitPane>
   </children>
</fx:root>
